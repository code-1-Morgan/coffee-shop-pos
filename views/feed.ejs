<%- include('partials/header') -%>
  <div class="container">
    <h2>All orders</h2>
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <div class="col-6">
          <h4>Incomplete</h4>
          <% for(var i=0; i<posts.length; i++) {%>
            <li class="col justify-content-between mt-4">
              <div class="w-25 p-2 border border-dark border-2 bg-warning bg-gradient">
                <a href="/post/<%= posts[i]._id%>" class="text-decoration-none">
                  <p class="text-body">Customer Name: <strong><%= posts[i].title%></strong></p>
                  <p><mark><%= posts[i].caption%></mark></p>
                  <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                  <span> Modify</span></svg>
                </a>
              </div>
            </li>
          <% } %>
        </div>
        <div class="col-3">
          <h4>Complete</h4>
        </div>
      </ul>
    </div>
    <div class="row text-center mt-5">
      <div class="col">
        <a href="/logout" class="btn btn-primary">Clock Out</a>
      </div>
    </div>
  </div>  
<%- include('partials/footer') -%>